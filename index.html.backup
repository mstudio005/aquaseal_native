<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description"
        content="AquaSeal - Download YouTube video thumbnails in high quality. Fast, modern, and easy to use.">
    <meta name="theme-color" content="#0a0e1a">

    <!-- SEO Meta Tags -->
    <meta name="keywords"
        content="youtube thumbnail downloader, download youtube thumbnail, youtube image, video thumbnail">
    <meta name="author" content="AquaSeal">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="AquaSeal - YouTube Thumbnail Downloader">
    <meta property="og:description" content="Download YouTube video thumbnails in high quality instantly">
    <meta property="og:type" content="website">

    <!-- PWA Meta Tags -->
    <link rel="manifest" href="manifest.json">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <meta name="apple-mobile-web-app-title" content="AquaSeal">

    <title>AquaSeal - YouTube Thumbnail Downloader</title>

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- Stylesheet -->
    <link rel="stylesheet" href="style.css">
</head>

<body>
    <!-- Background Effects -->
    <div class="bg-gradient"></div>
    <div class="bg-orbs">
        <div class="orb orb-1"></div>
        <div class="orb orb-2"></div>
        <div class="orb orb-3"></div>
    </div>

    <!-- Main Container -->
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <svg class="logo-icon" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M20 5L35 12.5V27.5L20 35L5 27.5V12.5L20 5Z" stroke="url(#logo-gradient)" stroke-width="2"
                        fill="none" />
                    <circle cx="20" cy="20" r="6" fill="url(#logo-gradient)" />
                    <defs>
                        <linearGradient id="logo-gradient" x1="5" y1="5" x2="35" y2="35" gradientUnits="userSpaceOnUse">
                            <stop offset="0%" stop-color="#00d9ff" />
                            <stop offset="100%" stop-color="#0099ff" />
                        </linearGradient>
                    </defs>
                </svg>
                <h1 class="logo-text">AquaSeal</h1>
            </div>
            <p class="tagline">YouTube Downloader</p>
        </header>

        <!-- Main Content -->
        <main class="main-content">
            <div class="card glass-card">
                <!-- Mode Selector -->
                <div class="mode-selector">
                    <button id="thumbnail-mode-btn" class="mode-btn active">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <rect x="3" y="3" width="18" height="18" rx="2" stroke="currentColor" stroke-width="2" />
                            <circle cx="8.5" cy="8.5" r="1.5" fill="currentColor" />
                            <path d="M21 15l-5-5L5 21" stroke="currentColor" stroke-width="2" />
                        </svg>
                        <span>Thumbnail</span>
                    </button>
                    <button id="video-mode-btn" class="mode-btn">
                        <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M23 7l-7 5 7 5V7z" fill="currentColor" />
                            <rect x="1" y="5" width="15" height="14" rx="2" stroke="currentColor" stroke-width="2" />
                        </svg>
                        <span>Video</span>
                    </button>
                </div>

                <div class="card-header">
                    <h2 class="card-title" id="mode-title">Download Thumbnails in Seconds</h2>
                    <p class="card-description" id="mode-description">Paste any YouTube video URL and get high-quality
                        thumbnails instantly</p>
                </div>

                <div class="input-section">
                    <div class="input-wrapper">
                        <svg class="input-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M10 13a5 5 0 007.54.54l3-3a5 5 0 00-7.07-7.07l-1.72 1.71" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" />
                            <path d="M14 11a5 5 0 00-7.54-.54l-3 3a5 5 0 007.07 7.07l1.71-1.71" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" />
                        </svg>
                        <input type="text" id="youtube-url-input" class="url-input"
                            placeholder="https://www.youtube.com/watch?v=..." autocomplete="off" spellcheck="false">
                        <button id="clear-btn" class="clear-btn" aria-label="Clear input">
                            <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                <path d="M18 6L6 18M6 6l12 12" stroke="currentColor" stroke-width="2"
                                    stroke-linecap="round" />
                            </svg>
                        </button>
                    </div>
                    <button id="fetch-btn" class="fetch-btn">
                        <span class="btn-text">Get Thumbnail</span>
                        <svg class="btn-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M5 12h14M12 5l7 7-7 7" stroke="currentColor" stroke-width="2"
                                stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                    </button>
                </div>

                <!-- Error Message -->
                <div id="error-message" class="error-message hidden">
                    <svg class="error-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="12" cy="12" r="10" stroke="currentColor" stroke-width="2" />
                        <path d="M12 8v4M12 16h.01" stroke="currentColor" stroke-width="2" stroke-linecap="round" />
                    </svg>
                    <span id="error-text"></span>
                </div>

                <!-- Loading State -->
                <div id="loading-state" class="loading-state hidden">
                    <div class="loader"></div>
                    <p class="loading-text">Fetching thumbnail...</p>
                </div>

                <!-- Thumbnail Preview -->
                <div id="thumbnail-section" class="thumbnail-section hidden">
                    <div class="thumbnail-container">
                        <img id="thumbnail-preview" class="thumbnail-preview" alt="YouTube video thumbnail">
                        <div class="thumbnail-overlay">
                            <button id="preview-download-btn" class="preview-download-btn">
                                <svg viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                                    <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3"
                                        stroke="currentColor" stroke-width="2" stroke-linecap="round"
                                        stroke-linejoin="round" />
                                </svg>
                            </button>
                        </div>
                    </div>

                    <div class="quality-section">
                        <h3 class="quality-title">Select Quality</h3>
                        <div class="quality-options">
                            <label class="quality-option">
                                <input type="radio" name="quality" value="maxresdefault" checked>
                                <span class="quality-label">
                                    <span class="quality-name">Maximum</span>
                                    <span class="quality-resolution">1280x720</span>
                                </span>
                            </label>
                            <label class="quality-option">
                                <input type="radio" name="quality" value="hqdefault">
                                <span class="quality-label">
                                    <span class="quality-name">High</span>
                                    <span class="quality-resolution">480x360</span>
                                </span>
                            </label>
                            <label class="quality-option">
                                <input type="radio" name="quality" value="mqdefault">
                                <span class="quality-label">
                                    <span class="quality-name">Medium</span>
                                    <span class="quality-resolution">320x180</span>
                                </span>
                            </label>
                            <label class="quality-option">
                                <input type="radio" name="quality" value="sddefault">
                                <span class="quality-label">
                                    <span class="quality-name">Standard</span>
                                    <span class="quality-resolution">640x480</span>
                                </span>
                            </label>
                        </div>
                    </div>

                    <button id="download-btn" class="download-btn">
                        <svg class="download-icon" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3" stroke="currentColor"
                                stroke-width="2" stroke-linecap="round" stroke-linejoin="round" />
                        </svg>
                        <span>Download Thumbnail</span>
                    </button>
                </div>

                <!-- Video Download Section -->
                <div id="video-section" class="video-section hidden">
                    <div class="video-info-card">
                        <div class="video-info-header">
                            <img id="video-thumbnail" class="video-info-thumbnail" alt="Video thumbnail">
                            <div class="video-info-details">
                            </div>

                            <!-- Script -->
                            <script src="script.js"></script>
</body>

</html>